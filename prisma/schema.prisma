generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String     @id @default(uuid())
  username     String     @unique // 5-10 字符
  email        String     @unique // 必填
  passwordHash String
  role         String     @default("student") // student | admin
  displayName  String?
  avatar       String?    // 头像 URL
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  purchases    Purchase[]
  comments     Comment[]
}

model Purchase {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  productType   String   // 'level' | 'bundle'
  productId     String   // 'hsk-1', 'bundle-all'
  amount        Float
  paypalOrderId String?
  purchasedAt   DateTime @default(now())
}

model Comment {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  resourceId String
  content    String
  approved   Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Lesson {
  id          String          @id @default(uuid())
  title       String          // e.g., "第一课：问候语"
  description String?
  level       Int             // 1-6
  order       Int             @default(0)
  isFree      Boolean         @default(false)
  published   Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  contents    LessonContent[]
}

model LessonContent {
  id        String   @id @default(uuid())
  lessonId  String
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  type      String   // 'video', 'audio', 'doc'
  title     String
  description String? // NEW: Description for the content item
  url       String?  // for doc/audio
  youtubeId String?  // for video
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HSKLevel {
  level          Int      @id // 1-6
  titleEn        String
  titleSc        String
  titleTc        String
  descriptionEn  String
  descriptionSc  String
  descriptionTc  String
  wordCount      Int
  updatedAt      DateTime @updatedAt
}
